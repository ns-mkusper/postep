{
  "name": "@postep/bridge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./platform/android/saf": {
      "import": "./src/platform/android/saf.ts"
    },
    "./slate-harness": {
      "import": "./examples/slate-harness.tsx"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "check": "tsc --noEmit",
    "dev:harness": "tsx examples/slate-harness.tsx"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "slate": "0.94.1",
    "slate-react": "0.94.1",
    "tsup": "7.2.0",
    "tsx": "4.15.7",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "@napi-rs/package": "2.4.2"
  }
}
